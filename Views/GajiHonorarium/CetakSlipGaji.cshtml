                    <td></td>
                    <td>Penyesuaian Pajak</td>
                    <td></td>
                    <td style="text-align:right">@*<hr style="border-top:1px;margin-top:-13px;"/>*@</td>
                    <td style="text-align:right;width:15%">@Model.dataPajakPenghasilan.penyesuaian_pajak<hr /></td>
                </tr>
            </tbody>
        </table>
       
        <table style="width:100%; border:none;margin-bottom:15px;">
            <tbody class="noBorder ttd">
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="text-align:left">@Model.data2.nama_unit</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="text-align:left"> Kepala,</td>
                   
                </tr>
