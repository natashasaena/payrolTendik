                    <td></td>
                    <td></td>
                    @{
                        string base64 = Convert.ToBase64String(Model.data2.ttd);
                        var ttd = String.Format("data:image/jpeg;base64,{0}", base64);
                    }
                    <td style="text-align:left"><img src="@ttd" style="filter:grayscale(100%)" /></td>
                </tr>
                <tr>
                    <td style="width:20%"></td>
                    <td style="width:20%"></td>
                    <td style="width:15%"></td>
                    <td style="width:15%"></td>
