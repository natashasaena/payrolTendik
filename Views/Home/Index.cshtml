    <script>
        function updateGaji() {
            var gol_kary = $('#golongan').val();
            var masa_kerja_kary = $('#masa_kerja_golongan').val();
            var tgl_sk = $('#tgl_sk').val();

            var table = $('#tabel');
            var data = [];

            table.find('tr').each(function(i, el) {

                if (i != 0) {
                    var $tds = $(this).find('td');
                    var row = [];
                    $tds.each(function(i, el) {
                        var temp = $(this).text();
                        if ($(this).find('input').length) {
                            temp = $(this).find('input').val();
                        }
                        row.push(temp);
                    });
                    data.push(row);
                }

            });
            //console.log(data);
            var mdl = [];
            for (var i = 0; i < data.length - 4; i++) {
                var subArray = data[i],
                    item = {
                        "npp": subArray[0],
                        "komponen_gaji": subArray[1],
                        "nominal": subArray[4],
                        "masa_kerja_golongan": masa_kerja_kary,
                        "tgl_sk": tgl_sk,
                        "golongan": gol_kary

                    };
                mdl.push(item);
            }
            //console.log(mdl);
            if (mdl.length != 0) {
                $.ajax({
                    type: "POST",
                    url: "/Home/UbahKomponenGaji",
                    cache: false,
                    dataType: "json",
                    data: {
                        "mdl": mdl
                    },
                    success: function(response) {
                        alert("Data berhasil disimpan.");
                    },
                    error: function(xhr) {
                        alert("Telah terjadi kesalahan dengan kode : " + xhr.status + ", silahkan menghubungi admin terkait.");
                    }
                });
            }
        }
    </script>
